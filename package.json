{
  "name": "github-user-time",
  "version": "0.0.0",
  "description": "Get the github user's local time",
  "main": "dist/github-user-time.cjs.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test:cov": "npm run lint && jest --coverage",
    "test": "npm run lint && jest",
    "test:local": "jest",
    "lint": "xo",
    "prepublishOnly": "npm run build",
    "build": "bili --format cjs,es,umd,umd-min",
    "semantic-release": "npm run build && semantic-release"
  },
  "repository": {
    "url": "sinchang/github-user-time",
    "type": "git"
  },
  "author": "sinchang<sinchangwen@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "moment-timezone": "^0.5.23"
  },
  "devDependencies": {
    "bili": "^3.3.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.15.2",
    "semantic-release": "^17.2.3",
    "xo": "^0.23.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "envs": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
